            <span><i class="fas fa-plus"></i></span>
            Add Note
          </button>
        </form>
      </div>
      <div class="note-list">
        <% data.forEach(function(val) { %>
          <div class="note-item"  id="<%=val.id%>">
            <h3><%= val.nickname %></h3>
            <p><%= val.content %></p>
            <button type = "button" class = "btn delete-note-btn">
            <span><i class = "fas fa-trash"></i></span>
